<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/UpdateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Update Profile"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputUsername"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdateProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:elevation="10dp"
        android:hint="Username"
        app:boxStrokeColor="#009688"
        app:hintTextColor="#009688">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_username_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/baseline_person_24"
            android:drawableTint="#009688"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputFUllname"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:hint="FullName"
        app:boxStrokeColor="#009688"
        app:hintTextColor="#009688">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_fullname_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/fullname_icon"
            android:drawableTint="#009688"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputFUllname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:hint="Email"
        app:boxStrokeColor="#009688"
        app:hintTextColor="#009688">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/baseline_email_24"
            android:drawableTint="#009688"
            android:inputType="textWebEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputPass"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:hint="Password"
        app:boxStrokeColor="#009688"
        app:hintTextColor="#009688">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_pass_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/baseline_password_24"
            android:drawableTint="#009688"
            android:inputType="textWebPassword" />

    </com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg"
        android:text="Update"
        app:backgroundTint="#009688" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Cancel"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/main"
        app:strokeWidth="2dp" />


</RelativeLayout>